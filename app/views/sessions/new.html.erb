<h1>Log in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>

  <%= render 'authentications/external_providers', :action => "Sign in" %>
    
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  
  <div class="actions"><%= f.submit "Sign in" %></div>
    
<% end %>
