%h1 Login in page

.login-form
  = render 'authentications/external_providers'
  = form_tag sessions_path do
    .field
      = label_tag :email
      = text_field_tag :email
    .field
      = label_tag :password
      = password_field_tag :password
    .field
      = label_tag :remeber_me
      = check_box_tag :remember_me
      
    .actions
      = submit_tag t('signin')