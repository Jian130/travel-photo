<h1>Profiles#show</h1>
<%= form_for @profile do |f| %>
  <%= render 'shared/error_messages', :target => @profile %>
  
  <div class="field">
    <%= f.label :username %><br/>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br/>
    <%= f.text_field :first_name %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %><br/>
    <%= f.text_field :last_name %>
  </div>
  
  <div class="field">
    <%= f.label :hometown %><br/>
    <%= f.text_field :hometown %>
  </div>
  
  <div class="field">
    <%= f.label :timezone %><br/>
    <%= f.text_field :timezone %>
  </div>
  
  <div class="field">
    <%= f.label :locale %><br/>
    <%= f.text_field :locale %>
  </div>
  
  <div class="field">
    <%= f.label :bio %><br/>
    <%= f.text_field :bio %>
  </div>
  
  <div class="field">
    <%= f.label :web %><br/>
    <%= f.text_field :web %>
  </div>
  
  <div class="actions"><%= f.submit %></div>
  
<% end %>
